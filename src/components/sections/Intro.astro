---
// src/components/sections/Intro.astro
import { TypewriterEffect } from '@/components/ui/TypewriterEffect';
---

<section
  class="bg-surface-base px-2 py-20 text-center transition-colors duration-300"
>
  <div class="mx-auto max-w-3xl space-y-6">
    <h2
      class="text-text-main animate-fade-in-up text-4xl font-bold tracking-tight md:text-6xl"
    >
      The Future of <br />
      <span
        class="bg-gradient-to-r from-red-500 to-orange-500 bg-clip-text text-transparent"
      >
        Live Streaming
      </span>
    </h2>

    <div class="text-text-muted min-h-[100px] text-xl leading-relaxed">
      <TypewriterEffect
        client:visible
        text="We provide the ultimate hardware ecosystem for content creators. From capture cards to encoders, everything is designed for zero latency."
        speed={0.02}
      />
    </div>
  </div>
</section>

<style>
  /* 标题的简单上浮动画 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
</style>
