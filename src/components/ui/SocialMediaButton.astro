---
// src/components/ui/SocialMediaButton.astro

// 1. 导入我们刚才创建的本地图标组件
import Facebook from '@/assets/icons/Facebook.astro';
import Linkedin from '@/assets/icons/Linkedin.astro';
import Instagram from '@/assets/icons/Instagram.astro';
import Youtube from '@/assets/icons/Youtube.astro';

// 2. 配置链接和对应的图标组件
const SOCIAL_LINKS = [
  {
    name: 'Facebook',
    url: 'https://www.facebook.com/cndliveAVoIP',
    bgClass: 'bg-[#316ff6]',
    icon: Facebook, // 直接引用组件
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/company/cndlive-avoip/',
    bgClass: 'bg-[#0077b5]',
    icon: Linkedin,
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/cndlivee/',
    bgClass: 'bg-gradient-to-tr from-[#ff7a00] via-[#ff0169] to-[#d300c5]',
    icon: Instagram,
  },
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/@CNDLive',
    bgClass: 'bg-gradient-to-b from-[#ff0000] to-[#B2211C]',
    icon: Youtube,
  },
];
---

<div class="flex items-center gap-3 sm:gap-4">
  {
    SOCIAL_LINKS.map((item) => (
      <a
        href={item.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={item.name}
        class="group relative h-10 w-10 cursor-pointer overflow-hidden rounded-lg sm:h-12 sm:w-12"
      >
        {/* 1. 默认状态 (静止显示) */}
        <div
          class:list={[
            'flex h-full w-full items-center justify-center transition-transform duration-500 ease-in-out group-hover:-translate-y-full',
            item.bgClass,
          ]}
        >
          {/* ✅ 直接渲染组件，并传入 class 控制大小和颜色 */}
          <item.icon class="h-5 w-5 text-white sm:h-6 sm:w-6" />
        </div>

        {/* 2. Hover 状态 (从下方滚上来) */}
        <div
          class:list={[
            'flex h-full w-full items-center justify-center transition-transform duration-500 ease-in-out group-hover:-translate-y-full',
            item.bgClass,
          ]}
        >
          <item.icon class="h-5 w-5 text-white sm:h-6 sm:w-6" />
        </div>
      </a>
    ))
  }
</div>
