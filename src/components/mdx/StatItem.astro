---
interface Props {
  value: string;
  label: string;
}
const { value, label } = Astro.props;
---
<div class="text-center p-6 bg-zinc-900/50 rounded-2xl border border-white/5">
  <div class="text-3xl md:text-4xl font-black text-white mb-2 bg-gradient-to-br from-white to-zinc-500 bg-clip-text text-transparent">
    {value}
  </div>
  <div class="text-xs md:text-sm text-zinc-500 uppercase tracking-wider font-medium">
    {label}
  </div>
</div>