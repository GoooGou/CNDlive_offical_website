---
interface Props {
  value: string;
  label: string;
}
const { value, label } = Astro.props;
---

<div class="bg-surface-muted border-border rounded-2xl border p-6 text-center">
  <div class="text-text-main mb-2 text-3xl font-black md:text-4xl">
    {value}
  </div>
  <div
    class="text-text-muted text-xs font-medium tracking-wider uppercase md:text-sm"
  >
    {label}
  </div>
</div>
