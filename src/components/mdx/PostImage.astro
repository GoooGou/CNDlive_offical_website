---
import { Image } from 'astro:assets';

const { src, alt, title } = Astro.props;
---

<figure class="my-8">
  <div
    class="border-surface-border relative overflow-hidden rounded-xl border bg-zinc-900 shadow-2xl"
  >
    {/* 如果 src 是字符串(外部链接)直接用 img，如果是本地图片对象用 Image */}
    {
      typeof src === 'string' ? (
        <img src={src} alt={alt} class="h-auto w-full object-cover" />
      ) : (
        <Image src={src} alt={alt} class="h-auto w-full object-cover" />
      )
    }
  </div>
  {/* 如果有 title 或 alt，显示在图片下方 */}
  {
    (title || alt) && (
      <figcaption class="mt-3 text-center font-mono text-xs text-zinc-500">
        {title || alt}
      </figcaption>
    )
  }
</figure>
