---
// src/components/mdx/Callout.astro
import { Info } from 'lucide-react';

interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<div
  class="my-6 flex gap-4 rounded-lg border border-l-4 border-zinc-200 border-l-blue-500 p-4 dark:border-zinc-800"
>
  <Info className="h-6 w-6 shrink-0 text-blue-500" />

  <div class="flex w-full min-w-0 flex-col gap-2">
    {
      title && (
        // 添加 m-0 覆盖 prose 默认的 heading margin
        <h4 class="m-0 text-base font-bold text-zinc-900 dark:text-zinc-100">
          {title}
        </h4>
      )
    }

    {
      /* 1. 移除了具体的 text 颜色，让其继承 prose 的默认颜色。
       2. 添加了 first-child 和 last-child 选择器，去除 prose 内容自带的上下边距，
          防止在边框内产生多余空白。
    */
    }
    <div class="text-sm [&>*:first-child]:mt-0 [&>*:last-child]:mb-0">
      <slot />
    </div>
  </div>
</div>
