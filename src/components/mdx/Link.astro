---
const { href, ...props } = Astro.props;
const isInternal = href && (href.startsWith('/') || href.startsWith('#'));
---

<a
  href={href}
  target={isInternal ? '_self' : '_blank'}
  rel={isInternal ? undefined : 'noopener noreferrer'}
  class="border-b border-blue-200 pb-0.5 font-medium text-blue-600 no-underline transition-all hover:border-blue-600 hover:text-blue-800 dark:border-blue-800 dark:text-blue-400 dark:hover:border-blue-400 dark:hover:text-blue-300"
  {...props}
>
  <slot />
</a>
