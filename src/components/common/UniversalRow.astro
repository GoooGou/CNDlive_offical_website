---
import { Image } from 'astro:assets';
import NewsCover from './Cover.astro'; // 复用你的封面组件

interface Props {
  post: any;
  basePath: string;
}

const { post, basePath } = Astro.props;
// 注意：如果点击 404，请检查这里是否应该用 post.slug
const href = `${basePath}/${post.id}`;

// 日期格式化
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-GB', {
    day: 'numeric',
    month: 'short',
    year: 'numeric',
  });
};
---

<a href={href} class="group flex h-full items-start gap-5">
  {/* 左侧小图 */}
  <div
    class="border-surface-border aspect-4/3 w-32 shrink-0 overflow-hidden rounded-xl border transition-colors duration-300 sm:w-48"
  >
    <NewsCover
      src={post.data.cover}
      alt={post.data.title}
      title={post.data.title}
      className="h-full w-full"
    />
  </div>

  {/* 右侧文字 */}
  <div class="flex flex-1 flex-col space-y-2">
    {/* 元信息: 作者 • 日期 */}
    <div
      class="text-text-muted flex items-center gap-2 text-xs transition-colors"
    >
      <span>{post.data.author}</span>
      <span>•</span>
      <span>{formatDate(post.data.pubDate)}</span>
    </div>

    {/* 标题 */}
    <h3
      class="text-text-main group-hover:text-primary line-clamp-2 text-lg leading-tight font-bold transition-colors"
    >
      {post.data.title}
    </h3>

    {/* 描述 */}
    <p
      class="text-text-muted line-clamp-2 hidden text-sm transition-colors sm:block"
    >
      {post.data.description}
    </p>
  </div>
</a>
