---
// src/components/PageSkeleton.astro
// 这是一个通用的列表页骨架屏
---

<div class="w-full animate-pulse space-y-8">
  {/* 循环 3 次，模拟 3 篇文章正在加载 */}
  {
    Array.from({ length: 3 }).map((_, index) => (
      <div class="flex flex-col gap-6 rounded-2xl border border-gray-100 p-4 md:flex-row dark:border-gray-800">
        {/* 左侧：模拟缩略图 (保持 16:9 比例) */}
        <div class="aspect-video w-full rounded-xl bg-gray-200 md:w-1/3 dark:bg-gray-700" />

        {/* 右侧：模拟文本内容 */}
        <div class="flex-1 space-y-4 py-2">
          {/* 标题占位条 */}
          <div class="h-6 w-3/4 rounded-full bg-gray-200 dark:bg-gray-700" />

          {/* 日期/作者元数据占位 */}
          <div class="h-4 w-1/4 rounded-full bg-gray-100 dark:bg-gray-800" />

          {/* 摘要文本占位 (多行) */}
          <div class="space-y-2 pt-2">
            <div class="h-4 w-full rounded-full bg-gray-100 dark:bg-gray-800" />
            <div class="h-4 w-full rounded-full bg-gray-100 dark:bg-gray-800" />
            <div class="h-4 w-2/3 rounded-full bg-gray-100 dark:bg-gray-800" />
          </div>
        </div>
      </div>
    ))
  }
</div>
