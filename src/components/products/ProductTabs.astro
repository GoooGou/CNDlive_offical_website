---
// src/components/ProductTabs.astro
interface Props {
  items: {
    id: string;
    label: string;
    href: string;
  }[];
  activeId: string;
}

const { items = [], activeId } = Astro.props;
---

<nav
  class="bg-surface-base border-surface-border sticky top-20 left-0 z-40 mb-8 w-full border-b shadow-lg transition-colors duration-300"
>
  <div class="mx-auto max-w-5xl px-4">
    <div class="flex h-14 items-center justify-center space-x-8">
      {
        items.map((tab) => (
          <a
            href={tab.href}
            class:list={[
              'relative px-3 py-2 text-sm font-medium transition-colors duration-200',
              // [修改]: 悬停时变为主要文字颜色 (黑/白)
              'hover:text-text-main',
              // [修改]:
              // 激活状态: text-text-main (黑/白)
              // 默认状态: text-text-muted (灰)
              activeId === tab.id ? 'text-text-main' : 'text-text-muted',
            ]}
          >
            {tab.label}

            {/* 选中时的下划线 (保持品牌色 bg-primary 不变) */}
            {activeId === tab.id && (
              <span class="bg-primary absolute bottom-0 left-0 h-[2px] w-full rounded-t-full" />
            )}
          </a>
        ))
      }
    </div>
  </div>
</nav>
