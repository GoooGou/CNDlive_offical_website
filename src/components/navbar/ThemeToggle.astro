---
// src/components/navbar/ThemeToggle.astro
---

<button
  id="theme-toggle"
  type="button"
  class="relative inline-flex h-9 w-9 items-center justify-center rounded-lg border border-white/10 bg-white/5 text-gray-400 transition-colors hover:bg-white/10 hover:text-white focus:outline-none"
  aria-label="Toggle theme"
>
  <svg
    class="sun-icon h-5 w-5 opacity-100 transition-opacity duration-300 dark:hidden dark:opacity-0"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
    ></path>
  </svg>

  <svg
    class="moon-icon hidden h-5 w-5 opacity-0 transition-opacity duration-300 dark:block dark:opacity-100"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
    ></path>
  </svg>
</button>

<script is:inline>
  // 处理逻辑封装，防止污染全局
  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  };

  // 初始化逻辑 (每次页面加载/切换都会运行)
  const initTheme = () => {
    const theme = (() => {
      if (
        typeof localStorage !== 'undefined' &&
        localStorage.getItem('theme')
      ) {
        return localStorage.getItem('theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'light';
    })();

    if (theme === 'light') {
      document.documentElement.classList.remove('dark');
    } else {
      document.documentElement.classList.add('dark');
    }

    // 绑定事件
    // 先移除旧的监听器，防止重复绑定 (Astro 路由切换时可能发生)
    const btn = document.getElementById('theme-toggle');
    if (btn) {
      btn.removeEventListener('click', handleToggleClick);
      btn.addEventListener('click', handleToggleClick);
    }
  };

  // 关键点 2: astro:page-load
  // 这确保了在 View Transitions 页面切换后，JS 依然会重新运行并绑定事件。
  // 如果只写 window.onload，切换页面后按钮就会失效。
  document.addEventListener('astro:page-load', initTheme);

  // 同时也需要在脚本首次执行时运行一次 (为了防止首屏闪烁)
  // 但为了更极致的防闪烁，建议把这段判断 theme 的逻辑单独放到 Layout 的 <head> 里
  initTheme();
</script>
