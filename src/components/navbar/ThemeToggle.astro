---
// src/components/navbar/ThemeToggle.astro
---

<button
  type="button"
  class="theme-toggle-btn hover:text-primary rounded-full p-2 text-white transition-colors duration-200"
  aria-label="Toggle Theme"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="sun-icon hidden h-5 w-5"
  >
    <circle cx="12" cy="12" r="4"></circle>
    <path d="M12 2v2"></path>
    <path d="M12 20v2"></path>
    <path d="m4.93 4.93 1.41 1.41"></path>
    <path d="m17.66 17.66 1.41 1.41"></path>
    <path d="M2 12h2"></path>
    <path d="M20 12h2"></path>
    <path d="m6.34 17.66-1.41 1.41"></path>
    <path d="m19.07 4.93-1.41 1.41"></path>
  </svg>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="moon-icon h-5 w-5"
  >
    <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
  </svg>
</button>

<style>
  /* 样式逻辑保持不变 */
  :global(.dark) .sun-icon {
    display: block;
  }
  :global(.dark) .moon-icon {
    display: none;
  }
  :global(:not(.dark)) .sun-icon {
    display: none;
  }
  :global(:not(.dark)) .moon-icon {
    display: block;
  }
</style>

<script>
  const initTheme = () => {
    // 1. 确保主题状态正确 (防止刷新后丢失状态)
    const theme = localStorage.getItem('theme');
    if (
      theme === 'dark' ||
      (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
    ) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }

    // 2. 查找页面上所有的切换按钮 (桌面 + 移动端)
    const buttons = document.querySelectorAll('.theme-toggle-btn');

    const handleToggle = (e: Event) => {
      // 阻止事件冒泡，防止触发外层链接（如果有的话）
      e.stopPropagation();

      const element = document.documentElement;
      element.classList.toggle('dark');

      const isDark = element.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    };

    // 3. 为每个按钮绑定点击事件
    buttons.forEach((btn) => {
      // 先移除可能存在的旧监听器（防止 Astro View Transitions 重复绑定）
      btn.removeEventListener('click', handleToggle);
      btn.addEventListener('click', handleToggle);
    });
  };

  // 支持 Astro View Transitions (页面跳转后重新初始化)
  document.addEventListener('astro:page-load', initTheme);

  // 兜底：首次加载也运行一次
  initTheme();
</script>
