---
// src/components/features/Features.astro
import BentoItem from '@/components/features/BentoItem.astro';
---

<section class="py-24 bg-black relative">
  <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 pointer-events-none"></div>
  
  <div class="container mx-auto px-4 max-w-7xl relative z-10">
    
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        Designed for <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-600">Pro Creators</span>
      </h2>
      <p class="text-zinc-400 text-lg">
        Everything you need to deliver studio-quality streams, packed into one powerful device.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[320px]">

      <BentoItem 
        title="Next-Gen AI Chipset" 
        description="Our custom silicon enables 4K60 encoding with zero CPU load on your gaming PC."
        class="md:col-span-2"
      >
        <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect><rect x="9" y="9" width="6" height="6"></rect><path d="M9 1v3"></path><path d="M15 1v3"></path><path d="M9 20v3"></path><path d="M15 20v3"></path><path d="M20 9h3"></path><path d="M20 14h3"></path><path d="M1 9h3"></path><path d="M1 14h3"></path></svg>
      </BentoItem>

      <BentoItem 
        title="Instant Setup" 
        description="Plug and play via USB-C. No drivers required for Windows or Mac."
      >
        <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg>
      </BentoItem>

      <BentoItem 
        title="Mobile Ready" 
        description="Stream directly from your iOS or Android device with our companion app."
      >
        <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="20" x="5" y="2" rx="2" ry="2"/><path d="M12 18h.01"/></svg>
      </BentoItem>

      <BentoItem 
        title="Studio Audio Engine" 
        description="Built-in compressor, limiter, and noise gate. Make your voice sound like a broadcaster."
        class="md:col-span-2"
      >
        <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 10v3"/><path d="M6 6v11"/><path d="M10 3v18"/><path d="M14 8v7"/><path d="M18 5v13"/><path d="M22 10v4"/></svg>
      </BentoItem>

    </div>

  </div>
</section>